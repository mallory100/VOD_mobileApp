<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VodDrawerMenuActivity"
    tools:showIn="@layout/app_bar_vod_drawer_menu"
    android:id="@+id/vodContentLayout"
    android:background="#ff7b7a80">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/vodCategoryDescription"
        android:id="@+id/vodCategoryDescription"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/vodContentDescription"
        android:id="@+id/vodContentDescription"
        android:layout_below="@+id/vodCategoryDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#ffffff"/>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewMovies"
        android:layout_below="@+id/vodContentDescription"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:textColor="#ffffff"/>


</RelativeLayout>
